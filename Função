#include <iostream>

// O que a função vai retornar?
//tipo de retorno da função
int SomaAUmNumero(int Numero, int NumeroASerSomado)
{
	return Numero + NumeroASerSomado;
}

void Mensagem()
{
	std::cout << "\nMensagem de Marte...chegamos bem!\n" << std::endl;
	return;
	//No caso aqui ele nunca mostrará essa linha de baixo por causa do comando return acima
	//Se você colocar este comando, o programa automaticamente sai desta função
	std::cout << "\nMensagem de Marte...chegamos bem! XD\n" << std::endl;
	return;
}


int main()
{
	Mensagem();
	int Numero, NumeroASerSomado;
	std::cout << "Digite um numero: " << "\n";
	std::cin >> Numero;
	std::cout << "Digite o numero a ser somado: " << "\n";
	std::cin >> NumeroASerSomado;
	std::cout << "A soma deste numero: " << Numero << " Com o Numero: " << NumeroASerSomado << " Sera: " << SomaAUmNumero(Numero, NumeroASerSomado);
	std::cout << std::endl;
	system("PAUSE");
	return 0;
}
